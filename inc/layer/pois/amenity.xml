<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Include [
    <!ENTITY % inc SYSTEM "../../inc.xml.inc">
    %inc;
]>

<Include xmlns:xi="http://www.w3.org/2001/XInclude">
	<Style name="pois-amenity">
		<!--
		  unused icons:
			bench
			fountain
			public_building
			survey_point
			toilets_disabled
			toilets_men
			toilets_women
			town_hall
			waste_bin
		-->
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='post_box'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/post_box.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='courthouse'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/court.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='fire_station'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/firestation.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='library'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/library.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[leisure]='playground'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/playground.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='police'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/police.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='post_office'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/post_office.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='prison'</Filter> 
			<PointSymbolizer file="&symbols;/png/16/amenity/prison.p.png" /> 
		</Rule> 
		<Rule>
			<!-- need to differenciate more -->
			&maxscale_zoom17;
			<Filter>[amenity]='recycling'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/recycling.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='telephone'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/telephone.p.png" />
		</Rule>
		<Rule>
			&maxscale_zoom17;
			<Filter>[amenity]='toilets'</Filter>
			<PointSymbolizer file="&symbols;/png/16/amenity/toilets.p.png" />
		</Rule>
		
		
		<Rule>
			<AlsoFilter />
			<TextSymbolizer name="[name]" fontset-name="book-fonts" size="9" fill="&cAmenityText;" dy="9" halo-radius="1" wrap-width="0" />
		</Rule>
	</Style>
</Include>
